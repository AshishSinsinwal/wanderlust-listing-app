<% layout('/layouts/boilerplate') -%>

<div class="container login-container">
  <div class="login-box mt-5 shadow p-4 rounded bg-white">
    <h1 class="text-center mb-4 fw-bold">Login to WanderLust</h1>

    <form action="/login" method="POST" class="needs-validation" novalidate>
      
      <!-- Username -->
      <div class="mb-4 row align-items-center">
        <label for="username" class="col-md-3 form-label">Username</label>
        <div class="col-md-9">
          <input type="text" name="username" id="username" required placeholder="Enter your username" class="form-control">
          <div class="invalid-feedback">Username cannot be empty</div>
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <!-- Password -->
      <div class="mb-4 row align-items-center">
        <label for="password" class="col-md-3 form-label">Password</label>
        <div class="col-md-9">
          <input type="password" name="password" id="password" required placeholder="Enter your password" class="form-control">
          <div class="invalid-feedback">Password cannot be empty</div>
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="d-grid">
        <button class="btn btn-dark btn-login py-2 fw-semibold">
          <i class="fas fa-sign-in-alt me-2"></i>Login
        </button>
      </div>
    </form>
  </div>
</div>
