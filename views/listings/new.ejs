<% layout('/layouts/boilerplate') -%>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <form 
        action="/listings" 
        method="POST" 
        class="create-form needs-validation" 
        novalidate 
        enctype="multipart/form-data"
      >
        <h2 class="mb-4 fw-semibold text-center">Create New Listing</h2>
        
        <!-- Title -->
        <div class="mb-4">
          <label for="title" class="form-label">Title</label>
          <input 
            type="text" 
            name="listing[title]" 
            id="title" 
            class="form-control" 
            required 
            placeholder="Add a catchy title" 
            maxlength="33"
          />
          <div class="invalid-feedback">Title cannot be empty</div>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <textarea 
            name="listing[description]" 
            id="description" 
            class="form-control" 
            required 
            placeholder="Describe your property..."
          ></textarea>
          <div class="invalid-feedback">Description should be valid</div>
        </div>

        <!-- Image Upload -->
        <div class="mb-4">
          <label for="img" class="form-label">Image Upload</label>
          <input 
            type="file" 
            name="listing[image]" 
            id="img" 
            class="form-control" 
            required
          />
          <div class="invalid-feedback">Please upload a valid image</div>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <label for="category" class="form-label fw-bold">Category</label>
          <select 
            name="listing[category]" 
            id="category" 
            class="form-select" 
            required
          >
            <option value="">-- Select a category --</option>
            <option value="rooms">🛏️ Rooms</option>
            <option value="iconic-cities">🏙️ Iconic Cities</option>
            <option value="castle">🏰 Castle</option>
            <option value="pools">🏊 Amazing Pools</option>
            <option value="camping">🏕️ Camping</option>
            <option value="farms">🐄 Farms</option>
          </select>
          <div class="invalid-feedback">Please choose a category</div>
        </div>

        <!-- Price & Country -->
        <div class="row mb-4">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input 
              type="number" 
              name="listing[price]" 
              id="price" 
              class="form-control" 
              required 
              placeholder="1200" 
              min="0"
            />
            <div class="invalid-feedback">Enter a valid price</div>
          </div>
          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input 
              type="text" 
              name="listing[country]" 
              id="country" 
              class="form-control" 
              required 
              placeholder="USA"
            />
            <div class="invalid-feedback">Country name is required</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <label for="location" class="form-label">Location</label>
          <input 
            type="text" 
            name="listing[location]" 
            id="location" 
            class="form-control" 
            required 
            placeholder="New York" 
            maxlength="30"
          />
          <div class="invalid-feedback">Enter a valid location</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark w-100">
          <i class="fas fa-save me-2"></i>Save Listing
        </button>
      </form>
    </div>
  </div>
</div>

<!-- Disable submit on click to prevent double submission -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector("form");
    const submitButton = form.querySelector("button[type='submit']");

    form.addEventListener("submit", () => {
      submitButton.disabled = true;
      submitButton.innerHTML = `<i class="fas fa-spinner fa-spin me-2"></i>Creating...`;
    });
  });
</script>
